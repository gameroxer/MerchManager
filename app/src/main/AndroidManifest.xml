<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aric.merchmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EventSelector"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventCreator"
            android:label="@string/activity_event_creator"
            android:parentActivityName=".EventSelector" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MerchSale"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_merch_sale"/>
        <activity
            android:name=".Checkout"
            android:parentActivityName=".MerchSale"
            android:label="@string/activity_checkout"/>
        <activity
            android:name=".ManageInventory"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_inventory_manager"/>
        <activity
            android:name=".CreateMerchItem"
            android:parentActivityName=".ManageInventory"
            android:label="@string/activity_merch_creator"/>
    </application>

</manifest>