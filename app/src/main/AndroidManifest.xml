<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aric.merchmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/yusuke_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/yusuke_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MerchSale"
            android:label="@string/activity_merch_sale"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ViewSales"
            android:label="@string/activity_view_sales"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ManageInventory"
            android:label="@string/activity_inventory_manager"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SetManager"
            android:label="@string/activity_set_manager"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Analytics"
            android:label="@string/activity_analytics"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Checkout"
            android:label="@string/activity_checkout"
            android:parentActivityName=".MerchSale" />
        <activity
            android:name=".CreateMerchItem"
            android:label="@string/activity_merch_creator"
            android:parentActivityName=".ManageInventory" />
        <activity
            android:name=".CreateSet"
            android:label="@string/activity_set_creator"
            android:parentActivityName=".SetManager" />
        <activity android:name=".PriceOverride" />
        <activity android:name=".EditInventoryItem" />
        <activity
            android:name=".EventSelector"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventCreator"
            android:label="@string/activity_event_creator"
            android:parentActivityName=".EventSelector" />
    </application>

</manifest>